<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.Views.MovePage"
             Title="MovePage">
    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="Button" x:Name="mylabel" FontSize="Medium"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        
        <Button 
            Text="Get Folder"
            VerticalOptions="Center"  FontSize="Medium"
            HorizontalOptions="Center" Clicked="Button_Clicked"/>
        <Button
            Text="Move"
            VerticalOptions="Center"  FontSize="Medium"
            HorizontalOptions="Center" Clicked="Button_Clicked_1"
            />
    </VerticalStackLayout>
</ContentPage>